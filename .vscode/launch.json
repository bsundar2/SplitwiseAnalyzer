{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run splitwise_export.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/splitwise_export.py",
      "console": "integratedTerminal",
      "args": [
        "--start-date",
        "2025-01-01",
        "--end-date",
        "2025-12-31",
        "--sheet-name",
        "MyFinanceSheet"
      ]
    },
    {
      "name": "splitwise_export (append)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/splitwise_export.py",
      "console": "integratedTerminal",
      "args": [
        "--start-date",
        "2025-01-01",
        "--end-date",
        "2025-12-31",
        "--sheet-name",
        "MyFinanceSheet",
        "--no-dedupe"
      ]
    },
    {
      "name": "splitwise_export (overwrite)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/splitwise_export.py",
      "console": "integratedTerminal",
      "args": [
        "--start-date",
        "2025-01-01",
        "--end-date",
        "2025-12-31",
        "--sheet-name",
        "MyFinanceSheet",
        "--no-append"
      ]
    },
    {
      "name": "Run pipeline.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/pipeline.py",
      "console": "integratedTerminal",
      "args": [
        "--statement",
        "${workspaceFolder}/data/raw/sample_statement.csv",
        "--dry-run"
      ]
    },
    {
      "name": "Run Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
