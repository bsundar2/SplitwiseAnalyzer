{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Splitwise Export (Overwrite)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/export/splitwise_export.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--overwrite"
      ]
    },
    {
      "name": "Splitwise Export (Append)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/export/splitwise_export.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Monthly Export Pipeline",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/export/monthly_export_pipeline.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--year",
        "2026",
        "--start-date",
        "2026-01-01",
        "--end-date",
        "2026-01-31",
        "--sync-only"
      ]
    },
    {
        "name": "Dry Run",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/import_statement/pipeline.py",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/config/.env",
        "args": [
            "--statement",
            "data/raw/sample_statement.csv",
            "--dry-run",
          "--worksheet-name",
          "${env:DRY_RUN_WORKSHEET_NAME}"
        ]
    },
    {
      "name": "Run Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
    }
  ]
}
