{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Splitwise Export (Overwrite)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/splitwise_export.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/credentials.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--start-date",
        "2025-01-01",
        "--end-date",
        "2025-12-31",
        "--sheet-key",
        "16PyxTb34EXWTwgGASX43uayVsQCsUJH1QZhFV-IjW-k",
        "--worksheet-name",
        "Splitwise 2025",
        "--overwrite"
      ]
    },
    {
      "name": "Splitwise Export (Append)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/splitwise_export.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/config/credentials.env",
      "args": [
        "--start-date",
        "2025-01-01",
        "--end-date",
        "2025-12-31",
        "--sheet-key",
        "16PyxTb34EXWTwgGASX43uayVsQCsUJH1QZhFV-IjW-k",
        "--worksheet-name",
        "'Splitwise 2025'"
      ]
    },
    {
        "name": "Dry Run",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/src/pipeline.py",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/config/credentials.env",
        "args": [
            "--statement",
            "data/raw/sample_statement.csv",
            "--dry-run",
            "--sheet-key",
            "16PyxTb34EXWTwgGASX43uayVsQCsUJH1QZhFV-IjW-k",
            "--worksheet-name",
            "Splitwise Dry Runs"
        ]
    },
    {
      "name": "Run Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
      ,
      "envFile": "${workspaceFolder}/config/credentials.env"
    }
  ]
}
